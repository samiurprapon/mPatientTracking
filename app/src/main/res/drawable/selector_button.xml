<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When item pressed this item will be triggered -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_700" />
            <corners android:radius="8dp" />
            <stroke android:color="@color/blue_indicator" android:width="2dp"/>
        </shape>
    </item>

    <!-- By default the background will be this item -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue_800" />
            <corners android:radius="8dp" />
            <stroke android:color="@android:color/white" android:width="2dp"/>
        </shape>
    </item>

</selector>